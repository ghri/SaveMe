<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parti"
        android:id="@+id/parti"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/stop"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INVIA"
        android:id="@+id/invia"
        android:layout_below="@+id/stop"
        android:layout_marginTop="46dp"
        android:layout_toRightOf="@+id/eliminaMex"
        android:layout_alignRight="@+id/stop"
        android:layout_alignEnd="@+id/stop" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textBox"
        android:hint="inserisci messaggio"
        android:layout_alignBottom="@+id/invia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/invia"
        android:layout_toStartOf="@+id/invia" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ResetDB"
        android:id="@+id/resetDB"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/parti"
        android:layout_toEndOf="@+id/parti" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/invia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/testoDebug"

            android:layout_marginTop="31dp" />
    </ScrollView>

</RelativeLayout>
